# Configuration de l'application
NODE_ENV=development
PORT=8000
API_VERSION=v1

# Base de données PostgreSQL
DB_HOST=db
DB_PORT=5432
DB_NAME=base_app
DB_USER=postgres
DB_PASSWORD=postgres

# Redis
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0

# JWT
JWT_SECRET=votre-clé-secrète-très-sécurisée-changez-la
JWT_EXPIRES_IN=7d

# CORS
CORS_ORIGIN=http://localhost:3000,http://frontend:3000

# Rate limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100