# Configuration CDN
CDN_ENABLED=true
CDN_PROVIDER=cloudflare
CDN_BASE_URL=https://cdn.example.com

# Domaines CDN
CDN_ASSETS_DOMAIN=assets.example.com
CDN_IMAGES_DOMAIN=images.example.com
CDN_VIDEOS_DOMAIN=videos.example.com

# Configuration CloudFlare
CLOUDFLARE_API_TOKEN=your_cloudflare_api_token
CLOUDFLARE_ZONE_ID=your_zone_id
CLOUDFLARE_ACCOUNT_ID=your_account_id

# Configuration AWS CloudFront
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
S3_BUCKET_NAME=your-assets-bucket
CLOUDFRONT_DISTRIBUTION_ID=your_distribution_id

# Options CDN
CDN_FALLBACK=true
ASSET_VERSION=1.0.0
CDN_CACHE_TTL=31536000

# Optimisation des images
IMAGE_OPTIMIZATION_ENABLED=true
IMAGE_QUALITY=85
IMAGE_FORMATS=webp,avif

# Compression
COMPRESSION_ENABLED=true
COMPRESSION_LEVEL=6
BROTLI_ENABLED=true

# Monitoring
CDN_ANALYTICS_ENABLED=true
CDN_MONITORING_ENABLED=true
