# =================================
# CONFIGURATION ENVIRONNEMENT
# =================================

# Environment
NODE_ENV=development

# =================================
# BASE DE DONNÉES
# =================================

# PostgreSQL
DB_HOST=localhost
DB_PORT=5432
DB_NAME=base_app_dev
DB_USER=postgres
DB_PASSWORD=change_me_in_production

# =================================
# REDIS
# =================================

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=change_me_in_production

# =================================
# SÉCURITÉ
# =================================

# JWT Secret (OBLIGATOIRE - Générer une clé forte)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-min-32-chars

# JWT Expiration
JWT_EXPIRES_IN=7d

# Bcrypt Salt Rounds
BCRYPT_SALT_ROUNDS=12

# =================================
# SERVEUR
# =================================

# Backend
BACKEND_PORT=8000
BACKEND_HOST=0.0.0.0

# Frontend
FRONTEND_PORT=3000
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_SOCKET_URL=http://localhost:8000

# =================================
# CORS
# =================================

# CORS Origins (séparés par des virgules)
CORS_ORIGIN=http://localhost:3000,http://localhost:3001

# =================================
# RATE LIMITING
# =================================

# Limite de requêtes par IP (par fenêtre)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# =================================
# TRAEFIK
# =================================

# Traefik Dashboard
TRAEFIK_DASHBOARD_USER=admin
TRAEFIK_DASHBOARD_PASSWORD=change_me_in_production

# SSL Email pour Let's Encrypt
ACME_EMAIL=admin@example.com

# =================================
# MONITORING
# =================================

# Adminer
ADMINER_DESIGN=pepa-linha
ADMINER_DEFAULT_SERVER=db

# =================================
# LOGS
# =================================

# Log Level (error, warn, info, debug)
LOG_LEVEL=info

# Log Format (json, simple)
LOG_FORMAT=simple

# =================================
# UPLOADS & EXPORTS
# =================================

# Taille max des uploads (en bytes)
MAX_FILE_SIZE=10485760

# Dossier des exports
EXPORTS_DIR=/app/exports

# =================================
# EMAIL (optionnel)
# =================================

# SMTP Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# Email From
EMAIL_FROM=noreply@yourapp.com

# =================================
# DÉVELOPPEMENT
# =================================

# Debug mode
DEBUG=false

# Hot reload
HOT_RELOAD=true

# =================================
# PRODUCTION
# =================================

# Domaine principal
DOMAIN=yourapp.com

# SSL Mode
SSL_MODE=auto

# Backup
BACKUP_RETENTION_DAYS=30

# =================================
# SÉCURITÉ AVANCÉE
# =================================

# Session Secret
SESSION_SECRET=your-session-secret-change-this-in-production

# Cookie Settings
COOKIE_SECURE=false
COOKIE_SAME_SITE=lax
COOKIE_MAX_AGE=86400000

# CSP (Content Security Policy)
CSP_ENABLED=true

# =================================
# NOTES
# =================================

# 1. Copiez ce fichier vers .env
# 2. Changez TOUS les mots de passe et secrets
# 3. Utilisez des générateurs de mots de passe forts
# 4. Ne commitez JAMAIS le fichier .env
# 5. En production, utilisez des gestionnaires de secrets